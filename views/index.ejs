<!doctype html>
<html>
  <head>
    <title>Welcome to <%=shopData.shopName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />       
  </head>
  <body>
    <h1>Welcome to <%=shopData.shopName%></h1>
    
    <% if (user) { %>
      <p><strong>Logged in as: <%= user.firstName %> <%= user.lastName %></strong> (<%= user.email %>)</p> <!-- Show user's name and email if logged in -->
      <p><a href="users/dashboard">My Dashboard</a> </p>
      <p><a href="/logout">Logout</a></p>
    <% } else { %>
      <p><a href="users/register">Register with us</a></p>
      <p><a href="users/login">Login</a></p>                  <!-- Show register/login links if not logged in-->
    <% } %>
    
    <hr>
    <p><a href="about">About <%=shopData.shopName%></a></p>
    <p><a href="classes/search">Search for classes</a></p>
    <p><a href="classes">View all available classes</a></p>
    <p><a href="classes/booking">Book a class</a></p>
  </body>
</html>
